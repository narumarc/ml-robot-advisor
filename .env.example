# Database Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=robo_advisor
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# API Keys
ALPHA_VANTAGE_API_KEY=your_api_key_here
FINANCIAL_DATA_API_KEY=your_api_key_here

# Gurobi License
GUROBI_HOME=/opt/gurobi
GRB_LICENSE_FILE=/opt/gurobi/gurobi.lic

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=robo_advisor

# Application Settings
ENV=development
LOG_LEVEL=INFO
DEBUG=True

# Risk Management
MAX_POSITION_SIZE=0.15
MAX_SECTOR_EXPOSURE=0.30
MIN_DIVERSIFICATION=10

# Optimization Parameters
OPTIMIZATION_SOLVER=GUROBI
OPTIMIZATION_TIMEOUT=300

# Rebalancing
REBALANCE_THRESHOLD=0.05
TRANSACTION_COST=0.001

# Model Monitoring
DRIFT_DETECTION_THRESHOLD=0.1
RETRAINING_THRESHOLD=0.15
MODEL_PERFORMANCE_CHECK_INTERVAL=daily

# API
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
